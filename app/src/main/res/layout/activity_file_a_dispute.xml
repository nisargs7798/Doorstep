<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FileADisputeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="Title"
            android:textColor="#000"
            android:textSize="26sp"
            />

        <!--        <Spinner-->
        <!--            android:id="@+id/spinner_dispute_reason"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_margin="20dp"-->
        <!--            android:backgroundTint="@color/colorAccent"-->
        <!--            />-->

        <EditText
            android:id="@+id/et_dispute_reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="2"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:hint="Enter Description"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="Description:"
            android:textColor="#000"
            android:textSize="26sp"
            />
        <EditText
            android:id="@+id/et_dispute_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="8"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:hint="Enter Description"
            android:layout_marginTop="10dp"
            />


        <Button
            android:id="@+id/btn_submit_dispute"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_bg_profile"
            android:text="Submit"
            android:textColor="#000"
            android:textSize="16sp"
            android:layout_margin="20dp"
            />
    </LinearLayout>

</ScrollView>